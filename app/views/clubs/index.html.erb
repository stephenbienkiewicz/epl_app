<h1>English Premier League</h1>
<h2>2015 - 2016</h2>

<h4><%= link_to 'Create New Club', new_club_path %></h4>
<h4><%= link_to 'Locations', locations_path %></h4>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td style="padding-right: 20px; font-size: 20px"><%= link_to club.name, club_path(club) %></td>
        <td><%= link_to 'edit', edit_club_path(club) %></td> 
        <td><%= link_to 'delete', club_path(club), method: :delete, data: {confirm: "Are you sure you want to delete this club?"} %></td>
      </tr>
    <% end %>          
  </tbody>
</table>


<h1>English Premier League</h1>
<h2>2015 - 2016</h2>

<% if current_user %>
  <h4><%= link_to 'Create New Location', new_location_path %></h4>
<% end %>

<table>
  <tr>
    <th>Name</th>
    
    <% if current_user %>
      <th></th>
    <% end %>

  </tr>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td style="color: white; background-color: blue; padding-right: 20px; font-size: 20px"><%= location.name %></td>
        
        <% if current_user %>
          <td><%= link_to 'edit', edit_location_path(location) %></td> 
          <td><%= link_to 'delete', location_path(location), method: :delete, data: {confirm: "Are you sure you 
            want to delete this location?"} %></td>
        <% end %>

      </tr>
    <% end %>          
  </tbody>
</table>

<h4 style="bottom: 0px"> <%= link_to 'Home', clubs_path %></h4>
<h1>English Premier League</h1>
<h2>2015 - 2016</h2>

<% if current_user %>
  <h4><%= link_to 'Create New Status', new_status_path %></h4>
<% end %>

<table>
  <tr>
    <th>Name</th>
    
    <% if current_user %>
      <th></th>
    <% end %>
  
  </tr>
  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td style="color: white; background-color: blue; padding-right: 20px; font-size: 20px"><%= status.name %></td>
        
        <% if current_user %>
          <td><%= link_to 'edit', edit_status_path(status) %></td> 
          <td><%= link_to 'delete', status_path(status), method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %></td>
        <% end %>

      </tr>
    <% end %>          
  </tbody>
</table>

<h4 style="bottom: 0px; position: fixed;"> <%= link_to 'Home', clubs_path %></h4>
